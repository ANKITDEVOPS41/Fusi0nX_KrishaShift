{
  "name": "Krishi Shift - Oilseed Farming Platform",
  "short_name": "Krishi Shift",
  "description": "Comprehensive Progressive Web Application for oilseed farming with real-time prices, FPO connections, government schemes, and AI-powered insights",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#22c55e",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en-IN",
  "dir": "ltr",
  "categories": ["agriculture", "business", "productivity", "finance"],
