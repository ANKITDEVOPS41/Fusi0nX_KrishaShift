  "shortcuts": [
    {
      "name": "Check Prices",
      "short_name": "Prices",
      "description": "View real-time crop prices",
      "url": "/prices",
      "icons": [
        {
          "src": "/icons/shortcut-prices.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Find FPOs",
      "short_name": "FPOs",
      "description": "Connect with Farmer Producer Organizations",
      "url": "/fpos",
      "icons": [
        {
          "src": "/icons/shortcut-fpos.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Government Schemes",
      "short_name": "Schemes",
      "description": "Explore government schemes and subsidies",
      "url": "/schemes",
      "icons": [
        {
          "src": "/icons/shortcut-schemes.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Compare Crops",
      "short_name": "Compare",
      "description": "Compare crop profitability",
      "url": "/compare",
      "icons": [
        {
          "src": "/icons/shortcut-compare.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.krishishift.app",
      "id": "com.krishishift.app"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "protocol_handlers": [
    {
      "protocol": "web+krishishift",
      "url": "/handle?url=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xls"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"]
      }
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "text/csv", ".xlsx"]
        }
      ]
    }
  }
}